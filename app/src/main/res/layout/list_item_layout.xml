<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewRoster"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="5dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:cardElevation="180dp"
    app:cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/status_bar_color"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:id="@+id/imageViewRoster"
            android:layout_height="220dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/author"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/nature"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingStart="3dp"

            android:background="@drawable/transparent_background"
            android:text="Выставка достижений"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewRoster"
            app:layout_constraintEnd_toEndOf="parent"


            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:text="Здесть будет короткая вставка"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/Button1"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/numberOfLikes"
            android:background="@drawable/feedbackicon"
            android:layout_margin="8dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberOfComments"
            android:layout_margin="3dp"
            android:textColor="@color/white"
            android:text="22"
            app:layout_constraintStart_toEndOf="@id/Button1"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin = "3dp"
            android:id="@+id/numberOfLikes"
            android:text="22"
            app:layout_constraintStart_toEndOf="@id/Button2"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/Button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/like_icon"

            />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/prinadleznost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/author"
            android:textSize="18sp"
            android:layout_marginStart="5dp"

            android:layout_marginEnd="10dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingBottom="4dp"
            android:textColor="@color/custom_green"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintBottom_toTopOf="@id/imageViewRoster"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/prinadleznost"
            android:textSize="18sp"
            android:layout_marginStart="5dp"

            android:layout_marginEnd="10dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:id="@+id/navigationView"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:text="SHARE"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>