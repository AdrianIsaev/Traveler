<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.Auth">

    <View
        android:id="@+id/wave_top_left"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/waveff3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/wave_bottom_left"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/waveff4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:textColor="@color/dark_blue"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="false"
        android:background="@drawable/transparent"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textLogin"
        app:layout_constraintTop_toBottomOf="@+id/buttonSmallRegister"
        android:gravity="center"
        android:textSize="36dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@drawable/transparent"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/buttonSmallRegister"

        android:backgroundTint="@color/gradient_main_down"
        app:layout_constraintTop_toBottomOf="@+id/wave_top_left"
        android:layout_margin="15dp"
        android:textSize="12dp"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email or number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLogin"
        android:id="@+id/firstEdit"
        android:layout_margin="15dp"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:id="@+id/secondEdit"
        android:hint="password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstEdit"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:textColor="@color/dark_blue"
        android:layout_height="wrap_content"
        android:text="аааааа"
        android:textAllCaps="false"
        android:background="@drawable/transparent"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/secondEdit"
        android:gravity="center"
        android:textSize="36dp" />
</androidx.constraintlayout.widget.ConstraintLayout>